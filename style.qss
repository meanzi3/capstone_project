QWidget[theme='dark'] {
    background-color:rgb(6, 82, 66);
}

QWidget[theme='light'] {
    background-color:rgb(183, 205, 182);
}

QPushButton#btn_start{
    background-color:rgb(255, 255, 255);
    color:rgb(6, 82, 66);
    padding-top:30px;
    padding-bottom:30px;
    border-style:solid;
    border-radius:30px;
}

QPushButton#btn_start:hover{
    background-color:rgb(255, 255, 255, 0.9);
}

QPushButton#btn_start:pressed{
    background-color:rgb(255, 255, 255, 0.7);
}

